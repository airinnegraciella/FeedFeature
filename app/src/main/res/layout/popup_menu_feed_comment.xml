<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/btn_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg_shadow_layout_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_margin"
            android:contentDescription="Image"
            android:tint="@color/dark_blue"
            android:src="@drawable/ic_edit_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_button_edit"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/font_size_title_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_edit"
        android:background="@drawable/white_bg_shadow_layout_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_margin"
            android:contentDescription="Image"
            android:tint="@color/dark_blue"
            android:src="@drawable/ic_delete_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_button_delete"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/font_size_title_text" />
    </LinearLayout>
</RelativeLayout>